<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lib_padding_left">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_tip_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="请勿在高反光材质上雕刻请勿在高反光材质上雕刻请勿在高反光材质上雕刻请勿在高反光材质上雕刻" />

    <com.angcyo.widget.DslButton
        android:id="@+id/pause_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:text="@string/print_v2_package_Laser_pause"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/stop_button"
        app:layout_constraintTop_toBottomOf="@id/lib_tip_view" />

    <com.angcyo.widget.DslButton
        android:id="@+id/stop_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lib_xhdpi"
        android:text="@string/print_v2_package_Laser_stop"
        app:layout_constraintLeft_toRightOf="@id/pause_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pause_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/again_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:text="@string/print_v2_package_Laser_again"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_tip_view"
        tools:alpha="0.8"
        tools:layout_marginTop="60dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>