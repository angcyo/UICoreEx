<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.angcyo.widget.DslButton
        android:id="@+id/lib_preview_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lib_xhdpi"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:text="@string/v3_bmp_setting_preview"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lib_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="240dp"
        tools:visibility="visible" />

    <com.angcyo.widget.DslButton
        android:id="@+id/lib_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/lib_xhdpi"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:text="@string/ui_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lib_preview_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="240dp" />

</androidx.constraintlayout.widget.ConstraintLayout>