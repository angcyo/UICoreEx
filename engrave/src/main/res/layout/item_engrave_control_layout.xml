<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/lib_padding_right"
    android:paddingVertical="@dimen/lib_xxhdpi">

    <com.angcyo.widget.DslButton
        android:id="@+id/pause_button"
        style="@style/LibButtonBlackSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/engrave_pause" />

    <com.angcyo.widget.DslButton
        android:id="@+id/stop_button"
        style="@style/LibButtonBlackSolidStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lib_xhdpi"
        android:layout_weight="1"
        android:text="@string/engrave_stop"
        android:textColor="@color/text_general_color"
        app:button_gradient_colors="@color/bg_primary_color" />

</LinearLayout>