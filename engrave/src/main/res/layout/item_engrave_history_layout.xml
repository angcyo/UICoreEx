<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_bg_selector"
    android:paddingHorizontal="@dimen/lib_xhdpi">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_text_view"
        style="@style/LibTitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/lib_hdpi"
        app:layout_constraintBottom_toTopOf="@id/lib_image_view"
        app:layout_constraintLeft_toLeftOf="@id/lib_image_view"
        app:layout_constraintRight_toRightOf="@id/lib_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="文件名文件名文件名" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_image_view"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/lib_hdpi"
        android:background="@color/transparent10"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/lib_text_view" />

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/lib_flow_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/lib_hdpi"
        android:paddingLeft="@dimen/lib_hdpi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lib_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:r_flow_item_horizontal_space="@dimen/lib_ldpi"
        app:r_flow_item_vertical_space="@dimen/lib_ldpi"
        app:r_flow_preview_item_count="10"
        app:r_flow_preview_item_layout_id="@layout/dsl_solid_tag_item" />

    <View
        android:id="@+id/lib_item_line_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/lib_line_px"
        android:background="@color/lib_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>