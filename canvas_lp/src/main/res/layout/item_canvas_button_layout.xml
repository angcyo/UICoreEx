<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/lib_padding_left"
    android:paddingTop="@dimen/lib_padding_left"
    android:paddingRight="@dimen/lib_padding_left"
    android:paddingBottom="@dimen/lib_padding_left">

    <com.angcyo.widget.DslButton
        android:id="@+id/lib_button"
        style="@style/LibButtonSolidStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_item_min_height"
        android:layout_marginHorizontal="@dimen/lib_xhdpi"
        app:button_gradient_colors="@color/lib_black"
        app:button_radius="@dimen/lib_radius_common"
        app:button_ripple_color="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/device_image_view"
        tools:text="@string/dialog_positive" />

</FrameLayout>