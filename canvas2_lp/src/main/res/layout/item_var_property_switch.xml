<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/lib_padding_left"
    tools:background="@color/transparent20">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_label_view"
        style="@style/LPItemLabelStyle"
        android:text="@string/variable_reset"
        android:textSize="@dimen/text_body_size" />

    <FrameLayout
        android:id="@+id/lib_content_wrap_layout"
        android:layout_width="@dimen/lp_value_item_width"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical">

        <com.angcyo.github.SwitchButton
            android:id="@+id/lib_switch_view"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sb_checked_color="@color/colorAccent"
            tools:sb_checked="true" />

    </FrameLayout>


</FrameLayout>