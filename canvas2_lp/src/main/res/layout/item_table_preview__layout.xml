<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lib_hdpi"
        android:scaleType="fitCenter"
        tools:layout_height="400dp" />

    <com.angcyo.widget.progress.ArcLoadingView
        android:id="@+id/lib_progress_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/lib_image_view"
        app:layout_constraintLeft_toLeftOf="@id/lib_image_view"
        app:layout_constraintRight_toRightOf="@id/lib_image_view"
        app:layout_constraintTop_toTopOf="@id/lib_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>