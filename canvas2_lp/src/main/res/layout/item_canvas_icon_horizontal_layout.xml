<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/lib_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/lib_padding_left"
    android:paddingVertical="@dimen/lib_hdpi">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/doodle_eraser" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_text_view"
        style="@style/LibTitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lib_hdpi"
        android:layout_weight="1"
        android:textColor="@color/lib_theme_text_selector"
        tools:text="!!橡皮擦!!" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/lib_check_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="@dimen/lib_sdpi"
        android:visibility="gone"
        app:srcCompat="@drawable/canvas_check_selector"
        tools:visibility="visible" />

</LinearLayout>