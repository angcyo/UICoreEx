<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1FEE4E7"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/lib_xxhdpi"
    android:paddingTop="@dimen/lib_hdpi"
    android:paddingRight="@dimen/lib_xhdpi"
    android:paddingBottom="@dimen/lib_hdpi">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/sdk_connect_error" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_text_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lib_hdpi"
        android:layout_weight="1"
        android:text="网络不给力, 请检查网络设置."
        android:textColor="#FE5968" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/lib_next_small" />

</LinearLayout>