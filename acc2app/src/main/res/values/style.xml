<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseWhiteAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTextButtonStyle" parent="LibBodyTextStyle">
        <item name="android:background">@drawable/start_button_round_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/lib_hdpi</item>
        <item name="android:minHeight">@dimen/lib_item_min_height</item>
    </style>

    <style name="AppEditStyle" parent="LibBodyTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/lib_ldpi</item>
        <item name="android:paddingBottom">@dimen/lib_ldpi</item>
        <item name="android:minHeight">@dimen/lib_item_min_height</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/dy_text_color_white</item>
        <item name="r_focus_drawable">@drawable/lib_bottom_focus_shape</item>
        <item name="r_no_focus_drawable">@drawable/lib_bottom_no_focus_shape</item>
    </style>

    <!--body-->
    <style name="AppBodyTextStyle" parent="LibBodyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">@dimen/lib_spacing_extra</item>
        <item name="android:textColor">@color/main_text_color_selector</item>
    </style>

    <!--主页顶部文本样式-->
    <style name="AppTopTextStyle" parent="AppBodyTextStyle">
        <item name="android:drawablePadding">@dimen/top_icon_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/top_icon_padding</item>
        <item name="android:paddingRight">@dimen/top_icon_padding</item>
        <item name="android:textSize">@dimen/text_assist_size</item>
    </style>

    <!--checkbox-->
    <style name="AppCheckBoxStyle" parent="AppBodyTextStyle">
        <item name="android:button">@drawable/app_checkbox_selector</item>
        <item name="android:enabled">false</item>
        <item name="android:paddingTop">@dimen/lib_ldpi</item>
        <item name="android:paddingLeft">@dimen/lib_ldpi</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">@dimen/lib_ldpi</item>
    </style>

    <!--checkbox text-->
    <style name="AppCheckBoxTextStyle" parent="AppBodyTextStyle">
        <item name="android:drawablePadding">@dimen/lib_hdpi</item>
        <item name="android:paddingLeft">@dimen/top_icon_padding</item>
        <item name="android:paddingTop">@dimen/lib_ldpi</item>
        <item name="android:paddingBottom">@dimen/lib_ldpi</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:background">@drawable/lib_bg_selector</item>
    </style>

    <!--card-->
    <style name="AppTaskCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/lib_xhdpi</item>
        <item name="android:layout_marginTop">@dimen/lib_hdpi</item>
        <item name="android:layout_marginRight">@dimen/lib_xhdpi</item>
        <item name="android:layout_marginBottom">@dimen/lib_hdpi</item>
        <item name="cardCornerRadius">@dimen/lib_radius_common</item>
        <item name="cardElevation">@dimen/lib_elevation</item>
    </style>

    <style name="AppThemeCheckBoxStyle" parent="AppBodyTextStyle">
        <item name="buttonTint">@color/app_text_general_color</item>
    </style>

    <style name="AppTaskTestCheckBoxStyle" parent="AppThemeCheckBoxStyle">
        <item name="android:textSize">10dp</item>
    </style>
</resources>